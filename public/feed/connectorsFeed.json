[
  {
    "id": "hubspot",
    "name": "HubSpot",
    "smallIcon": "/images/hubspot.svg",
    "largeIcon": "/images/hubspot.svg",
    "version": "1.0.0",
    "description": "This Connector facilitates authentication, authorization, and API calls between Fusebit and HubSpot on your behalf.\n\n[Learn more](https://developer.fusebit.io/docs/hubspot)!\n",
    "tags": {
      "catalog": "hubspot,crm,sales,intro,popular"
    },
    "configuration": {
      "schema": {
        "type": "object",
        "properties": {
          "hubspotConnector": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 3
              }
            }
          }
        }
      },
      "uischema": {
        "type": "VerticalLayout",
        "elements": [
          {
            "type": "Control",
            "scope": "#/properties/hubspotConnector/properties/id",
            "label": "Name"
          }
        ]
      },
      "data": {
        "hubspotConnector": {
          "hubspotName": "hubspot-connector"
        }
      },
      "entities": {
        "hubspotConnector": {
          "entityType": "connector",
          "data": {
            "configuration": {
              "scope": "contacts",
              "tokenUrl": "/v2/account/<%global.consts.accountId%>/subscription/<%global.consts.subscriptionId%>/connector/<%this.id%>/proxy/hubspot/oauth/token",
              "authorizationUrl": "/v2/account/<%global.consts.accountId%>/subscription/<%global.consts.subscriptionId%>/connector/<%this.id%>/proxy/hubspot/oauth/authorize",
              "clientId": "<%global.consts.random%>",
              "clientSecret": "<%global.consts.random%>",
              "refreshErrorLimit": 100000,
              "refreshInitialBackoff": 100000,
              "refreshWaitCountLimit": 100000,
              "refreshBackoffIncrement": 100000,
              "accessTokenExpirationBuffer": 500
            },
            "files": {
              "package.json": "{\n  \"scripts\": {\n    \"redeploy\": \"fuse connector rm <%this.name%> && yarn deploy\",\n    \"deploy\": \"fuse connector deploy <%this.name%> -d .\",\n    \"get\": \"fuse connector get <%this.name%> -d .\"\n  },\n  \"dependencies\": {\n    \"@fusebit-int/hubspot-connector\": \"^1.1.0\",\n    \"@fusebit-int/framework\": \"^4.0.0\"\n  }\n}\n"
            },
            "handler": "@fusebit-int/hubspot-connector"
          },
          "id": "<%this.id%>",
          "tags": { "fusebit.provider": "hubspot" }
        }
      },
      "components": [
        {
          "name": "<% this.id %>",
          "skip": false,
          "provider": "@fusebit-int/hubspot-provider",
          "entityId": "<% this.id %>",
          "dependsOn": [],
          "entityType": "connector"
        }
      ]
    }
  },
  {
    "id": "slack",
    "name": "Slack",
    "smallIcon": "/images/slack.svg",
    "largeIcon": "/images/slack.svg",
    "version": "1.0.0",
    "description": "This Connector facilitates authentication, authorization, and API calls between Fusebit and Slack on your behalf.\n\n[Learn more](https://developer.fusebit.io/docs/slack)!\n",
    "tags": {
      "catalog": "slack,intro,popular"
    },
    "configuration": {
      "schema": {
        "type": "object",
        "properties": {
          "slackConnector": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 3,
                "maxLength": 64
              }
            }
          }
        }
      },
      "uischema": {
        "type": "VerticalLayout",
        "elements": [
          {
            "type": "Control",
            "scope": "#/properties/slackConnector/properties/id",
            "label": "Name"
          }
        ]
      },
      "data": {
        "slackConnector": {
          "slackName": "slack-connector"
        }
      },
      "entities": {
        "slackConnector": {
          "entityType": "connector",
          "data": {
            "configuration": {
              "scope": "chat:write users:read channels:read channels:join chat:write.public",
              "tokenUrl": "/v2/account/<%global.consts.accountId%>/subscription/<%global.consts.subscriptionId%>/connector/<%this.id%>/proxy/slack/oauth/token",
              "authorizationUrl": "/v2/account/<%global.consts.accountId%>/subscription/<%global.consts.subscriptionId%>/connector/<%this.id%>/proxy/slack/oauth/authorize",
              "clientId": "<%global.consts.random%>",
              "clientSecret": "<%global.consts.random%>",
              "refreshErrorLimit": 100000,
              "refreshInitialBackoff": 100000,
              "refreshWaitCountLimit": 100000,
              "refreshBackoffIncrement": 100000,
              "accessTokenExpirationBuffer": 500
            },
            "files": {
              "package.json": "{\n  \"scripts\": {\n    \"redeploy\": \"fuse connector rm <%this.name%> && yarn deploy\",\n    \"deploy\": \"fuse connector deploy <%this.name%> -d .\",\n    \"get\": \"fuse connector get <%this.name%> -d .\"\n  },\n  \"dependencies\": {\n    \"@fusebit-int/slack-connector\": \"^3.0.0\",\n    \"@fusebit-int/framework\": \"^4.0.0\"\n  }\n}\n"
            },
            "handler": "@fusebit-int/oauth-connector"
          },
          "id": "<%this.id%>",
          "tags": { "fusebit.provider": "slack" }
        }
      },
      "components": [
        {
          "name": "<% this.id %>",
          "skip": false,
          "provider": "@fusebit-int/slack-provider",
          "entityId": "<% this.id %>",
          "dependsOn": [],
          "entityType": "connector"
        }
      ]
    }
  }
]
